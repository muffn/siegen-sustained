---
import { cn, sluglify } from '@/utils'

const { name = 'Alle Beiträge', activeCategory } = Astro.props
const currentPath = Astro.url.pathname
const unsluglifyNameCategory = sluglify(name.toLowerCase())

const isActive =
	activeCategory?.toLocaleLowerCase() === unsluglifyNameCategory ||
	(currentPath === '/' && name === 'Alle Beiträge')
---

<a
	href={name === 'Alle Beiträge' ? '/' : sluglify(`/category/${unsluglifyNameCategory}/1`)}
	class={cn(
		`text-gray-600 dark:text-gray-300 pb-2.5 first-letter:uppercase font-medium hover:text-gray-800 border-b-2 border-black/0 dark:border-white/0 dark:hover:border-white hover:border-black transition-colors duration-150 ease-linear`,
		isActive && `border-black border-b-2 text-black z-10 dark:border-white/100 dark:text-white`
	)}
>
	{name}
</a>
